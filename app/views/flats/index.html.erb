<div class="navbar">
  <h4>Simple airbnb</h4>
  <%= link_to 'Add flat', new_flat_path %>
</div>

<div class="container">
    <h1>All our Flats(<%= @flats.count %>)</h1>
    <ul>
      <% @flats.each do |flat| %>
      <li class="flat-card">
        <img src="https://picsum.photos/seed/picsum/300/200" alt="flat-image">
        <div class="grey-box">
          <h4><%=flat.name%></h4>
          <h5><%=flat.address%></h5>
          <div class="occupation-price">
            <%= flat.number_of_guests %>
            <%= flat.price_per_night %>
          </div>
        </div>
        <ul class="more-info">
          <li>
            <%= link_to 'More info', flat_path(flat) %>
          </li>
           <li>
            <%= link_to 'Edit', edit_flat_path(flat)  %>
           </li>
          <li>
          <%= link_to "Remove",
            flat_path(flat),
            method: :delete,
            data: { confirm: "Are you sure to delete #{flat.name}?" } %>
          </li>
        </ul>
      </li>
      <% end %>
    </ul>
</div>

